{
    "name": "My Dev imagedetection Container",
    "image": "nombre-de-tu-imagen:etiqueta",
    "mounts": [
        "source=${localWorkspaceFolder}/data,target=/app/data,type=bind"
    ],
    "workspaceFolder": "/app",
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash"
            },
            "extensions": [
                "ms-python.python",
                "ms-azuretools.vscode-docker"
            ]
        }
    }
}
